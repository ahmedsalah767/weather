<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css"/>

    <title>Weather App</title>
  </head>
  <body class="<%= night !== true ? ' ' : 'night' %>" >
    
  
    <div class="container">
      <h1 id="<%= night !== true ? ' ' : 'night' %>">Get Weather Now</h1>
      <form action='/', method="GET" ,class="my-4 form-inline form-weather" >

        <label for="fullUrl" class="sr-only">URL</label>
        <input
          required
          placeholder="Enter City"
          type="text"
          name="city"
          id="city"
          class="form-control mr-1 col"
        />
        <button type="submit" class="btn btn-success">Get Weather</button>
      </form>
      <div class="main" >
        
        
  
       <% if (typeof error !== 'undefined') { %>
        <p id="error"><%= error %></p>
      <% } %>

       <% if (typeof time !== 'undefined') { %>
        <p class="temp", id="<%= night !== true ? ' ' : 'night' %>"><%= time %>   </p> 
      <% } %>

       <% if (typeof city !== 'undefined' || typeof code !== 'undefined') { %>
        <p class="temp", id="<%= night !== true ? ' ' : 'night' %>"><%= city %> ,<%= code %>   </p> 
        
      <% } %>

      <% if (typeof weather !== 'undefined') { %>
        <p class="temp", id="<%= night !== true ? ' ' : 'night' %>"><%= weather %> </p>
      <% } %>

       <% if (typeof temp !== 'undefined') { %>
        <p class="temp" , id="<%= night !== true ? ' ' : 'night' %>"><%= temp %> C </p>
      <% } %>
      
      </div>
    </div>
    
  </body>
</html>
